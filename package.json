{
  "name": "blockchain-verifier",
  "version": "0.2.2",
  "description": "Blockchain Verifier",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bin": {
    "bcverifier": "build/cli.js"
  },
  "scripts": {
    "build": "tsc && chmod a+x build/cli.js",
    "test": "jest --coverage",
    "lint": "tslint 'src/**/*.ts'",
    "prepare": "tsc"
  },
  "author": "Taku Shimosawa <taku.shimosawa@hal.hitachi.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/asn1js": "0.0.2",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@types/pem": "^1.9.5",
    "jest": "^26.4.2",
    "ts-jest": "^26.4.1",
    "tslint": "^5.20.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "asn1js": "^2.0.26",
    "commander": "^6.1.0",
    "fabric-ca-client": "^2.2.2",
    "fabric-client": "^1.4.13",
    "fabric-common": "^2.2.2",
    "fabric-protos": "^2.2.2",
    "level": "^6.0.1",
    "pem": "^1.14.4",
    "protobufjs": "^6.10.1"
  },
  "engines": {
    "node": "^10.15 || ^12.15"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    }
  },
  "homepage": "https://github.com/hyperledger-labs/blockchain-verifier"
}
